{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Kinesis-Lambda-DynamoDB example",
  "Resources": {
    "KinesisLambdaDynamoDBRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Path": "/",
        "Policies": [
          {
            "PolicyName": "root",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "dynamodb:*"
                  ],
                  "Resource": "*"
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "events:*"
                  ],
                  "Resource": "*"
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "lambda:*"
                  ],
                  "Resource": "*"
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:*"
                  ],
                  "Resource": "arn:aws:logs:*:*:*"
                }
              ]
            }
          }
        ],
        "RoleName": "KinesisLambdaDynamoDBRole"
      }
    },
    "KinesisStream": {
      "Type": "AWS::Kinesis::Stream",
      "Properties": {
        "ShardCount": "2"
      }
    },
    "PubmedRecordDynamoDBTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "AttributeDefinitions": [
          {
            "AttributeName": "id",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "id",
            "KeyType": "HASH"
          }
        ],
        "ProvisionedThroughput": {
          "ReadCapacityUnits": "10",
          "WriteCapacityUnits": "5"
        },
        "TableName": "PubmedRecord"
      }
    },
    "PubmedSearchLambda": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "S3Bucket": "builds.evidentia.com",
          "S3Key": "pubmed-search-lambda.zip"
        },
        "Description": "Runs a search in pubmed, sends results to Kinesis",
        "FunctionName": "PubmedSearchKLD",
        "Handler": "pubmed_search.handler",
        "Role": {
          "Fn::GetAtt": [
            "KinesisLambdaDynamoDBRole",
            "Arn"
          ]
        },
        "Runtime": "python3.6",
        "MemorySize": 1536,
        "Timeout": 300
      }
    },
    "PubmedFetchLambda": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "S3Bucket": "builds.evidentia.com",
          "S3Key": "pubmed-fetch-lambda.zip"
        },
        "Description": "Fetches search results from pubmed, saves record to DynamoDB",
        "FunctionName": "PubmedSearchKLD",
        "Handler": "pubmed_fetch.handler",
        "Role": {
          "Fn::GetAtt": [
            "KinesisLambdaDynamoDBRole",
            "Arn"
          ]
        },
        "Runtime": "python3.6",
        "MemorySize": 1536,
        "Timeout": 300
      }
    }
  }
}
